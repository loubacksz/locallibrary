html(lang='en')
  head
    title= title
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/css/bootstrap.min.css", integrity="sha384-LN+7fdVzj6u52u30Kp6M/trliBMCMKTyK833zpbD+pXdCLuTusPj697FH4R/5mcr", crossorigin="anonymous")
    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/js/bootstrap.bundle.min.js", integrity="sha384-ndDqU0Gzau9qJ1lfW4pNLlhNTkCfHzAVBReH9diLvGRem5+R9g2FzA8ZGN954O5Q", crossorigin="anonymous")
    link(rel='stylesheet', href='/stylesheets/style.css')
  body
    block content
    div(class='container-fluid vh-100 d-flex flex-column justify-content-center align-items-center p-3')
        div(class='row text-center mb-4')
            h1=title
        div(class='form-container')
            form(method='POST')
                div.form-group.mb-3
                    label(for='email' class='form-label mb-1') E-mail:
                    input#first_name.form-control(type='email', name='email' required value=(undefined===user ? '' : user.user_email))
                div.form-group.mb-4
                    label(for='password' class='form-label mb-1') Password:
                    input#family_name.form-control(type='password', name='password' required value=(undefined===user ? '' : user.user_password))
                button.btn.btn-primary(type='submit' class='w-100 mb-3') Submit
                if errors
                    div(class='alert alert-danger mt-3')
                        ul(class='mb-0')
                        for error in errors
                            li!= error.msg
            hr(class='my-3')
            div(class='text-center')
                p(class='mb-2 small') Don't have an account?
                a.btn.btn-outline-primary(href='http://localhost:4000/users/signup' class='w-100') Sign Up